# Agregamos un menu
while True:
    print("/n--- CALCULADORA DE GASTOS ---")
    print("1. Ingresar gastos.")
    print("2. Ver total gastado.")
    print("3. Salir")
    
# Pedimos una opcion
    opcion = int(input("Eligue una opcion: "))

    if opcion == 1:
        # Pedimos datos al usuario
        comida = int(input("¿Cuanto gastas en comida? "))
        transporte = int(input("¿Cuanto gastas en transporte? "))
        entretenimiento = int(input("¿Cuanto gastas en entretenimiento? "))
        # Calculamos el total
        total = comida + transporte + entretenimiento
        print("Gastos guardados exitosamente.")
    elif opcion == 2:
        try:
            # Mostramos el resultado
            print(f"Tu gasto total es: {total} pesos")
            # Pedimos presupuesto del usuario
            presupuesto = float(input("¿Cual es tu presupuesto diario? "))

            # Mostramos si ha gastado demaciado o no
            if total > presupuesto:
                print("¡Has gastado mas de lo planeado!")
            elif total == presupuesto:
                print("Excelente, gastaste lo justo.")
            else:
                print("¡Muy bien!, te sobro dinero.")
        except:
            print("Aun no has ingresados gastos")
    elif opcion == 3:
        print("Has salido del programa.")
        break
    else:
        print("Opcion no valida, intenta de nuevo.")
